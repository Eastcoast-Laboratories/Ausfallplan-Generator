# Production Environment Configuration Example
# Copy this to config/.env on production server

# Database Configuration
export DATABASE_URL="mysql://username:password@localhost/fairnestplan"

# Log Configuration (optional)
# Redirect CakePHP logs to nginx log directory
# Make sure the directory is writable by www-data
export LOG_PATH="/var/log/nginx"
export LOG_ERROR_FILE="fairnestplan.de-error"
export LOG_DEBUG_FILE="fairnestplan.de-debug"
export LOG_QUERIES_FILE="fairnestplan.de-queries"

# Default: Logs go to logs/ directory in project root
# export LOG_PATH="/var/kunden/webs/ruben/www/fairnestplan.z11.de/logs"
# export LOG_ERROR_FILE="error"
# export LOG_DEBUG_FILE="debug"

# Security Salt (generate with: openssl rand -base64 32)
export SECURITY_SALT="your-security-salt-here"

# Debug Mode (never enable on production!)
export DEBUG="false"
