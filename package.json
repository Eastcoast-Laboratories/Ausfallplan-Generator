{
  "name": "fairnestplan",
  "version": "1.0.0",
  "description": "> A multi-tenant web application for Kitas (childcare organizations) to create and manage **Schedules** (absence/day plans) for children with automatic distribution, waitlist management, and PDF/PNG export capabilities.",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "postinstall": "npx playwright install chromium",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:screenshots": "playwright test tests/e2e/navigation.spec.js",
    "test:debug": "playwright test --debug",
    "test:chromium": "playwright test --project=chromium",
    "setup:browsers": "npx playwright install chromium"
  },
  "repository": {
    "type": "git",
